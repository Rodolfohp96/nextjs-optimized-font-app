# Environment Variables Template for Backend
# Copy this file to .env and fill in your values

# Define the server environment (development/production)
NODE_ENV=development

# The port number for the backend server
PORT=5000

# MongoDB Connection URI (replace with your database connection string)
MONGO_URI=mongodb://localhost:27017/ehr_platform

# JWT Secret for token signing (use a strong secret in production)
JWT_SECRET=your_jwt_secret_key

# Directory path for uploaded files
FILE_UPLOAD_DIR=./uploads

# Allowed frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# Paths for digital signature key pair
PRIVATE_KEY_PATH=./config/private.key
PUBLIC_KEY_PATH=./config/public.key
