# Environment Variables for Backend

# Define the server environment
NODE_ENV=development

# The port number for the backend server
PORT=5000

# MongoDB Connection URI
MONGO_URI=mongodb://localhost:27017/ehr_platform

# JWT Secret for token signing (change this in production)
JWT_SECRET=your_jwt_secret_key_development_only

# Directory path for uploaded files
FILE_UPLOAD_DIR=./uploads

# Allowed frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# Paths for digital signature key pair
PRIVATE_KEY_PATH=./config/private.key
PUBLIC_KEY_PATH=./config/public.key
